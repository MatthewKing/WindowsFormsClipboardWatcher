<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <PackageId>WindowsFormsClipboardWatcher</PackageId>
    <Title>Windows Forms Clipboard Watcher</Title>
    <Description>Provides clipboard watching/monitoring functionality.</Description>
    <Authors>Matthew King</Authors>
    <Copyright>Copyright Matthew King.</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/MatthewKing/WindowsFormsClipboardWatcher</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MatthewKing/WindowsFormsClipboardWatcher</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>winforms windows forms clip clipboard watcher monitor</PackageTags>
    <VersionPrefix>1.0.0</VersionPrefix>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.0</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

</Project>
